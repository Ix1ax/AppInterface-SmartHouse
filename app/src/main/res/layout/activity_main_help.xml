<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainByColor"
    tools:context=".MainHelp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="65dp"
      android:layout_height="0dp"
      android:background="@color/asideBgColor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/helpButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-160dp"
        android:contentDescription="helpButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/helpbuttontwo" />

    <ImageView
        android:id="@+id/mainButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="335dp"
        android:contentDescription="mainButton"
        android:onClick="pageMainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mainbuttontwo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="goToProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logonobg" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="60dp"
        android:layout_height="113dp"
        android:layout_marginTop="-15dp"
        android:contentDescription="goToProfile"
        android:onClick="goToProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatarlogo" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
      android:id="@+id/disc"
      android:layout_width="330dp"
      android:layout_height="234dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="200dp"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="280dp"
      android:fontFamily="@font/montserrat"
      android:text="@string/discleimer"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/constraintLayout"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.419" />

  <TextView
      android:id="@+id/connect"
      android:layout_width="321dp"
      android:layout_height="98dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="750dp"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="25dp"
      android:fontFamily="@font/montserrat"
      android:gravity="center|left"
      android:text="@string/mail"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/constraintLayout"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


